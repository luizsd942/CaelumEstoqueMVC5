@model IList<CaelumEstoque.Models.Produto>


    <table class="table table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nome</th>
                <th>Quantidade</th>                    
            </tr>
        </thead>
        <tbody>
            @foreach(var prod in Model)
            {
                <tr>
                    <td>@prod.Id</td>
                    <td>
                        @Html.RouteLink(prod.Nome, "DetalhesProduto", new { id = prod.Id } )
                    </td>
                    <td>@prod.Quantidade</td>                        
                </tr>
            }
        </tbody>
    </table>

